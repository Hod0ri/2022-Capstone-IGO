FROM node:alpine
# tzdata install
RUN apk add --update tzdata
# alpine linux python3설치
RUN apk --no-cache add --virtual builds-deps build-base python3
# 앱 디렉터리 생성
WORKDIR /usr/src/app
# docker-compose 실행 위치 기준 
COPY server/package.json .

RUN npm install

# 앱 소스 추가
COPY . .

EXPOSE 23712

CMD [ "npm", "run","dev" ]